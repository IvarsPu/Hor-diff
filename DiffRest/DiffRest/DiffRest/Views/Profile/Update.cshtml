@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<input type="text" class="form-control" id="url" placeholder="URl" />
<br>
<input type="password" class="form-control" id="password" placeholder="Password" />
<br>
<input type="button" class="btn btn-primary mb-2" value="Update" onclick="update()" />

<script>
    //Updates profile
    function update() {
        $.ajax({
            type: "GET",
            url: '/Profile/UpdateProfile?url=' + $("#url").val() + '&password=' + $("#password").val(),
            success: function (i) {
                if (i == "True") {
                    window.open('/Process', '_self');
                }
                else {
                    alert("Couldn't perform this operation");
                }
            },
            error: function () {
                alert('fail');
            }
        });
    }
</script>