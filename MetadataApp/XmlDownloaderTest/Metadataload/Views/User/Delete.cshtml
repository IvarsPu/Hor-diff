@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<input type="text" id="id" placeholder="ID" />
<input type="button" value="Remove" onclick="removeUser()"/>

<script>
function removeUser() {
    $.ajax({
        type: "GET",
        url: '/User/DeleteUser?id=' + $("#id").val(),
        success: function (i) {
            if (i == "True") {
                alert("Success");
            }
            else {
                alert("Doesnt exist!");
            }
        },
        error: function () {
            alert('fail');
        }
    });
}
</script>