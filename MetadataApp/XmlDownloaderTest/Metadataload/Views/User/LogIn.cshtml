@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<input type="text" id="username" placeholder="Username" />
<br>
<input type="password" id="password" placeholder="Password" />
<br>
<input type="button" value="Log in" onclick="LogIn()"/>
<br>
<br>
<input type="button" value="Register" onclick="window.open('/User/Create', '_self');" />
<input type="button" value="Delete" onclick="window.open('/User/Delete', '_self');" />
<input type="button" value="Update" onclick="window.open('/User/Update', '_self');" />

<script>
    function LogIn() {
        $.ajax({
            type: "GET",
            url: '/User/GetUser?username=' + $("#username").val() + '&password=' + $("#password").val(),
            success: function (i) {
                if (i != 0) {
                    alert(i);
                }
                else {
                    alert("Wrong username or password!");
                }
            },
            error: function () {
                alert('fail');
            }
        });
    }
</script>