<script src="~/Scripts/jquery-1.9.1.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/employee.js"></script>

<h3>Salīdzini servisa versijas</h3>
<select id="old" onchange="test()">
    @foreach (string text in Model)
    {
            <option value="@text">@text</option>
    }
</select>
<br>
<select id="new" onchange="test()">
    @foreach (string text in Model)
    {
        <option value="@text">@text</option>
    }
</select>

<div id="changes">
</div>



<script>
    function test() {
        $.ajax({
            url: "/Home/List?oldRelease=" + document.getElementById("old").value + "&newRelease=" + document.getElementById("new").value,
            type: "GET",
            success: function (msg) {
                document.getElementById("changes").innerHTML = msg;
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
    }
</script>
